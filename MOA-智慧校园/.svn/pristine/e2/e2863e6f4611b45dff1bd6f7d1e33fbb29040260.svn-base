      transPath = function (pathArr,callback) {

          var UIAlbumBrowser = api.require('UIAlbumBrowser');


          (function loopTrans(i)   {

                if(i === pathArr.length){

                  callback(pathArr);

                  return;
                }

                  UIAlbumBrowser.transPath({
                        path: pathArr[i].path
                    }, function(ret, err) {

                          if(ret.path){
 
                            pathArr[i].path = ret.path;
 

                          }

                         loopTrans(++i)


                    });



          }(0))


      }

 
 
