<script type="text/javascript">

  window.headerH;
  window.footerH;
	apiready = function(){

     loadCommonJs();

   

     headerH = api.pageParam.headerH
     footerH = api.pageParam.footerH


        if($api.getStorage('user')){

            initData();

        }else{

            goLogin();

        }
 

	}

  refreshLocation = function () {
      location.reload();
  }

  initData = function () {
    
     openBanner();

     initMess();

     initRefresh(function () {

          openBanner();

          vm.clickTab();

     })



  }


  initMess = function () {
 

     window.vm = new Vue({
          el:'#indexBox',
          data:{
            loadding      : true, 
            noData        : false,
            onClass       : ['on'],
            currentPage   : 1,
            catId         : 0,
            messList      : [],
            tabItem       :[{
              name : '邮件'
            },{
              name : '通知'
            }],
            postSw        : true, 
            newGoodsAPI   : '',
            userRank      : 1,
            limit         : 6,
            user          : {},
            maxMess       :[],
            msg_notread_num :'',
            youjian_notread_num:'',
            tongzhi_notread_num:'',
            all_notread_num : '',

            // userRank      : "{$user_rank}" ? "{$user_rank}" :0,
            bFirstPost    : true,
            indexShow     : true,
            json          : [{
                title :  '标标题标题标题标题标题题',
                time : '08:00',
                content : '这里是内容区域，新版中的列表布局可以很轻松的帮助开发者完成常见列表样式。',
            }],
            isDebug          :false,
            isTip           :true
          },
          methods:{
              clickTab:function (index){

               
                showProgress('加载中')


                this.emptyData();

                this.getData(true);
 

              },
              openGongGaoDetail:function (key) {
                openGongGaoDetail(key);
                
              },
              sliderMess:function () {



              setTimeout(function () {

 new TouchSlider('slider2',{duration : 600, interval:3000, direction:1, autoplay:true, align:'middle', mousewheel:true, mouse:true, fullsize:true});
                            
                },300)

                     
              },
              appendGongGao :function (data) {

                var  _this = this; 
                 
                _this.maxMess = data || [];
 
                if(_this.maxMess.length>0){

                    _this.sliderMess();
                }
 

              },

              openmail : function (index) {

                  openMailDetail(this.messList[index]);

              },
              appendWorkMail:function (data) {
                var  _this = this; 
                  if(!data  || data.length ===0){
                    this.noData = true;
                    this.isTip = false;
                    return;
                  }

                  _this.messList = data ||[];
 
                
              },
              appendMenuTips:function (data) {

                $api.setStorage('all_notread_num',data.all_notread_num);
 
                this.msg_notread_num = data.msg_notread_num 
                this.youjian_notread_num = data.youjian_notread_num 
                this.tongzhi_notread_num = data.tongzhi_notread_num 

                this.updateBadge()
 
              },
              updateBadge:function () {
                
                 api.sendEvent({
                      name: 'upateBadge', 
                  });
 
              },

              getData:function (bFirstPost) {

                this.bFirstPost = bFirstPost;

                this.loadding = true;

                var _this = this;
 
                var timestamp     = Date.parse(new Date())/1000;
 
                    // alert(JSON.stringify(sign));
  

                ajax({
                  aApi : 'index/getShouye',
                  params:{
                    jiaoshi_id : $api.getStorage('user').id
                  }
                },function (data) {

                  hideProgress();
                  hideRefresh();
                  hideRefresh();
               
 
                  if(data.code==1){

                          var resData = data.data; 


                          _this.appendGongGao(resData.gonggao_data);

                          _this.appendWorkMail(resData.email_data);

                          _this.appendMenuTips(resData);



                  }else{

                       toast(data.msg);

                  }
                })
                
  

             } ,

             changeCategoryStyle:function (index) {


                  this.onClass = [];
                  this.onClass[index] ='on';
             },
             emptyData:function () {
                  this.currentPage  = 1;
                  this.json  =[{
                    title :  '标标题标题标题标题标题题',
                    time : '08:00',
                    content : '这里是内容区域，新版中的列表布局可以很轻松的帮助开发者完成常见列表样式。',
                }];

             },

             bindScroll:function () {
               var _this = this;

                initLoadMore({
                       distance: 600,
                       callback:function () {
                          if(_this.postSw){

                                  _this.postSw = false;
                                  _this.currentPage++;
                                  _this.loadding = true;
                                  _this.getData(false);


                          }

                          
                       }
                    })




             }
          },
           beforeCreate:function (){
               log("实例创建之前"+'beforeCreate')
          },

           beforeMount:function() {
               log("数据编译之前"+'beforeMount')
           },
          mounted:function() {

               log("数据编译完成"+'mounted')
           },
           beforeUpdate:function () {
               console.log("数据更新之前"+'beforeUpdate')
           },
           updated:function () {
               console.log("数据解析完成"+'updated')
           },
           beforeDestroy:function () {
               log("数据销毁之前"+'beforeDestroy')
           },
           destroyed:function () {
               log("数据销毁完成"+'destroyed')
           },
           created:function () {

               //同步返回结果：

             log("实例创建完成")

             var  user =  $api.getStorage('user') || false;


              this.user =  user

              this.getData(true);



 
          },





         
    });




    }




 



