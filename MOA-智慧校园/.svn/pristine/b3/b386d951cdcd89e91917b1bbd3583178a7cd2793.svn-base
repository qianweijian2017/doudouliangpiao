    }
    .gonggao .item{
      display: block;width: 100%;
      position: relative;

    }
   
    .gonggao  .bottom{
      height: 15px;
      line-height: 15px;
      color: #D5D5D7;
      padding-bottom: 12px;
      margin-top: 9px;
    }
     .gonggao .bottom span {

      color: #999;
      font-size: 11px;
      float: left;


    }
    .gonggao .bottom time.time {
      float: right;
      color: #999; 
      font-size: 11px; 

    }
     .gonggao .comTitle{
        width: 100%; 
     }
     .gonggao .comTitle .title{
         float: left;
         text-indent: 20px;

     }

    .gonggao  .btnDetail{
      float: right;
      border-radius: 2px;
      padding: 0 10px;
      font-size: 11px; 
      position: absolute;
      right: 0px;
      top: 14px;

    }
    .gonggao{
      position: relative;
    }
    .gonggao .tan{
      position: absolute;
      left: 15px;
      top: 13px;
      width: 12px;
      height: 12px;
      right: auto;
      bottom: auto;  
    }
    #banner{
      height: 140px;
    }

  </style>
</head>
<body>
