 
.tablist{
  height: 45px;
  line-height: 45px;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  background-color: #fff;
}
.tablist .tabItem{
  -webkit-flex: 1;
  -moz-flex: 1;
  -ms-flex: 1;
  -o-flex: 1;
  flex: 1;
  height: 43px;
  line-height: 43px;
  border-bottom: 2px solid #fff;
  text-align: center;
  font-size: 14px;
   color: #333;

  
}
.tablist .tabItem.active {
  color: #333;
  height: 43px; 
  line-height: 43px; 
  border-bottom: 2px solid #e51c23; 
  color: #e51c23;

}




