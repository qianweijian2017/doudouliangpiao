               //  "zhuangtai": "0",
               //  "juese_cache_str": "1",
               //  "zidingyi_cache_str": "2"
             //  }

            hideProgress();

            if(data.code==0){

              toast(data.msg);

            }else{

              toast(data.msg)
 
                var user = data.data;

                $api.setStorage('user',user);

                api.setPrefs({
                    key: 'user',
                    value: user
                });



                api.execScript({
                    name: 'root', 
                    frameName:'frame0',
                    script: 'initData();'
                });
 

