<script type="text/javascript">

    dologin = function(){

      showProgress('登录中...');


        ajax({
           aApi : 'index/checkJiaoshiLogin',
           params:{
            username : dom('#username').value,
            password : dom('#password').value

           }
        },function(data){


             // "data": {
               //  "xiaoqu_id": "1",
               //  "xuenian_id": "2",
               //  "xuenian_mingcheng": "2018学年",
               //  "nianji_id": "49",
