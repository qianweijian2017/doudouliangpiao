

body{

	overflow: hidden;
}

header {
	z-index: 2;
	height: 50px;
	line-height: 50px;
	width: 100%;
	color: #fff;
	position: relative;
	top: 0;
	left: 0;

}
header .title{
	position: relative;
	height: 50px;
	font-size:16px;
	color:#fff;
	text-align: center;
	line-height: 50px;
	/*background: #fff;*/

}
header  .close{
	 position: absolute;
	 right: 25px;
	 width: 25px;
	 height: 25px;
	 background-size: 100% 100%;
	 bottom: 12px;
	 background-image: url(../icon/common/closew.png);



}



 .login_box{

 	z-index: 88;
 	padding:20px 0;
	margin: 30px 0;
  margin-top: 20px;

 }
.login_box cite{
       display: block;
    width: 100%;
    font-size: 16px;
    height: 46px;
    color: #333;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    line-height: 46px;
    margin-bottom: 5px;
     padding: 0 20px;
    box-sizing: border-box;
    background: #fff;
    border-radius: 5px;

 }
  .login_box cite span{
  	-webkit-flex: 1;
  	-moz-flex: 1;
  	-ms-flex: 1;
  	-o-flex: 1;
  	flex: 1;
		color: #1E1E1E;
		font-size: 13px;
  }
    .login_box cite input{
    	-webkit-flex: 4;
    	-moz-flex: 4;
    	-ms-flex: 4;
    	-o-flex: 4;
			font-size: 13px;
			color: #1E1E1E;
    	flex: 4;
			padding-left: 10px;
			box-sizing: border-box;
    }

 .login_box cite input:active{
 	border: none;
 }
   .login_box cite input:focus{
   	border: none;
   }

  .login_box cite .borderBox span.icon:after{
  	content: '';
  	display: block;
  	background-color: #d9d9d9;
  	width: 1px ;
  	height: 31px;
  	position: absolute;
  	right: 0;
  	top: 8px;
  }
 .login_box cite .borderBox span.icon.iconphone{
background-image: url(../icon/login/doudouliang_03.png);

 }
 .login_box cite .borderBox span.icon.iconreg{
background-image: url(../icon/login/doudouliang_08.png);

 }
 .login_box cite .borderBox span.icon.iconcode{
background-image: url(../icon/login/doudouliang_08.png);

 }

